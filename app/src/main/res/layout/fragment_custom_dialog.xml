<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".price_dialog.CustomFragmentDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/currency_name_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Bitcoin"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="6dp"

            android:layout_marginStart="12dp"
            android:id="@+id/dialog_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average price for week:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currency_name_dialog" />

        <TextView
            android:layout_marginBottom="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:id="@+id/dialog_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average price for month:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_week" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>